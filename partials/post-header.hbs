<header class="post-header{{#if big_title}} big-title{{/if}}{{#if single}} container medium{{/if}}">
    {{#if single}}
        <h1 class="post-title">{{title}}</h1>
    {{else}}
        <h2 class="post-title">
            <a class="post-title-link" href="{{url}}">{{title}}</a>
        </h2>
    {{/if}}
    {{#unless hide_meta}}
        <div class="post-meta">
            <span class="post-meta-item post-meta-date">
                Last updated <time datetime="{{date format="YYYY-MM-DD"}}">{{date updated_at}}</time>
            </span>
            {{^is "page"}}
                {{#if tags}}
                    <span class="post-meta-item post-meta-tags">
                        {{#foreach tags}}<a class="post-tag post-tag-{{slug}}" href="{{url}}"
                                title="{{name}}">{{name}}</a>{{/foreach}}
                    </span>
                {{/if}}
            {{/is}}
        </div>
    {{/unless}}
</header>